        </StackPanel>





        <StackPanel Orientation="Vertical" Margin="543,313,463,-408">
            <TextBlock HorizontalAlignment="Left" Foreground="White" Margin="10" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="22"/>
