                   />

            <Button 
            Margin="0,300,0,0"
            Content="BACK" 
            HorizontalAlignment="Center" 
            Background="#FF191919"
            Foreground="White"
            Height="41" 
            Width="495" 
            Click="NavigateBack"
            />

        </StackPanel>

        <StackPanel 
            HorizontalAlignment="Left" 
            Height="158" 
            VerticalAlignment="Top" 
            Background="#FF191919">
            <Image Source="ms-appx:///Assets/LogoFinalEdit.png" Height="160" Width="505"/>


        </StackPanel>

        <StackPanel 
