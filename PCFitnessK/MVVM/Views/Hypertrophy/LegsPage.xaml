            <TextBox HorizontalAlignment="Left" Background="#e5e5e5" Margin="5" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="118"/>

            <Button 
            Content="GEM" 
            Margin="150,100,0,0"
            HorizontalAlignment="Left"
            Background="#131313"
            Foreground="White"
            BorderBrush="#FF191919"
            BorderThickness="5"
            Height="41" Width="134" 
            />
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="814,313,192,-408">
            <TextBlock HorizontalAlignment="Left" Foreground="White" Margin="10" TextWrapping="Wrap" Text="Sets" VerticalAlignment="Top" Height="22"/>
            <ComboBox Margin="5" Background="DimGray" ItemsSource="{Binding GetSets }" SelectedItem=""  />
